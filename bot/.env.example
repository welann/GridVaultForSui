# GridVault Bot 环境配置

# ==========================================
# 网络配置
# ==========================================

# 网络类型: testnet | mainnet | localnet
SUI_NETWORK=testnet

# RPC URL（可选，不填使用默认）
# SUI_RPC_URL=https://fullnode.testnet.sui.io:443

# ==========================================
# 密钥配置（二选一，推荐用私钥）
# ==========================================

# 方式1: 私钥（Base64 格式）
SUI_PRIVATE_KEY=your_base64_private_key_here

# 方式2: 助记词（12/24个单词）
# SUI_MNEMONIC=word1 word2 word3 ...

# ==========================================
# Vault 配置（创建 Vault 后填入）
# ==========================================

# Vault 对象 ID
VAULT_ID=

# TraderCap 对象 ID（Bot 持有）
TRADER_CAP_ID=

# 合约包 ID（部署后填入）
PACKAGE_ID=

# ==========================================
# 交易配置
# ==========================================

GAS_BUDGET=10000000
TX_TIMEOUT_MS=30000

# ==========================================
# 网格策略配置
# ==========================================

# 价格区间
GRID_LOWER_PRICE=0.5
GRID_UPPER_PRICE=2.0

# 网格层数
GRID_LEVELS=10

# 每格交易金额（USDC）
GRID_AMOUNT_PER_GRID=10

# 滑点容忍度（bps，50 = 0.5%）
GRID_SLIPPAGE_BPS=50

# 交易对代币类型
COIN_TYPE_A=0x2::sui::SUI
COIN_TYPE_B=0x5d4b302506645c37ff133b98c4b50a5ae14841659738d6d733d59d0d217a93bf::coin::COIN

# ==========================================
# Bot 运行配置
# ==========================================

# Tick 间隔（毫秒）
TICK_INTERVAL_MS=1000

# API 端口
API_PORT=3215

# 数据库路径
DATABASE_PATH=./gridvault.db
